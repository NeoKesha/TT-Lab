<UserControl x:Class="TT_Lab.Controls.ClosableTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TT_Lab.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <ContentPresenter x:Name="TabName" Margin="0,0,10,0" Content="TabItem"/>
        <Button x:Name="CloseButton" Content="X" Grid.Column="1" Margin="0" Background="{x:Null}" BorderBrush="{x:Null}"/>

    </Grid>
</UserControl>
