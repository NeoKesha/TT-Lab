<UserControl x:Name="LabeledCheckboxControl" x:Class="TT_Lab.Controls.LabeledCheckBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TT_Lab.Controls"
             mc:Ignorable="d">
    <StackPanel Orientation="{Binding LayoutOrientation, RelativeSource={RelativeSource AncestorType=UserControl}}">
        <Label Content="{Binding CheckBoxName, RelativeSource={RelativeSource AncestorType=UserControl}}" HorizontalAlignment="Right" VerticalAlignment="Bottom"/>
        <CheckBox Style="{DynamicResource AdonisCheckBoxStyle}" IsChecked="{Binding Checked, RelativeSource={RelativeSource AncestorType=UserControl}}" Content="" HorizontalAlignment="Right" Margin="10,10,0,0" VerticalAlignment="Top"/>
    </StackPanel>
</UserControl>
