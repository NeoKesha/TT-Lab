<UserControl x:Name="LabeledCheckboxControl" x:Class="TT_Lab.Controls.LabeledCheckBox"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TT_Lab.Controls"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label x:Name="CheckboxLabel" Content="Label" HorizontalAlignment="Right" Margin="0,0,0,0" VerticalAlignment="Bottom"/>
        <CheckBox x:Name="CheckBox" Style="{DynamicResource AdonisCheckBoxStyle}" IsChecked="{Binding DisplayChecked, ElementName=LabeledCheckboxControl, Mode=TwoWay}" Content="" HorizontalAlignment="Right" Margin="0,0,0,0" Grid.Row="1" VerticalAlignment="Top"/>

    </Grid>
</UserControl>
