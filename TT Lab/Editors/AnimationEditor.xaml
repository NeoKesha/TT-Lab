<local:BaseEditor x:Class="TT_Lab.Editors.AnimationEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TT_Lab.Editors"
             xmlns:codeAssets="clr-namespace:TT_Lab.Assets.Code"
             mc:Ignorable="d"
>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="133*"/>
            <ColumnDefinition Width="667*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="17*"/>
            <RowDefinition Height="133*"/>
        </Grid.RowDefinitions>
        <Label x:Name="BitfieldLabel" Content="Bitfield" Margin="0"/>
        <TextBox x:Name="BitfieldBox" Grid.Column="1" Margin="0" TextWrapping="Wrap" Text="TextBox"/>

    </Grid>
</local:BaseEditor>
