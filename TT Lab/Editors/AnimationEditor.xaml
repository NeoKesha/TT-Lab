<local:BaseEditor
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TT_Lab.Editors"
             xmlns:codeAssets="clr-namespace:TT_Lab.Assets.Code"
             xmlns:Controls="clr-namespace:TT_Lab.Controls" x:Class="TT_Lab.Editors.AnimationEditor"
             mc:Ignorable="d">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15*"/>
            <ColumnDefinition Width="16*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="19*"/>
            <RowDefinition Height="7*"/>
        </Grid.RowDefinitions>
        <Label x:Name="BitfieldLabel" Content="Bitfield" Margin="0" HorizontalAlignment="Right" VerticalAlignment="Center"/>

        <Controls:BaseTextBox x:Name="BitfieldBox" Grid.Column="1" Margin="0" Text="{Binding Bitfield, StringFormat={}{0:x}, Mode=OneWay}" VerticalAlignment="Center" PreviewTextInput="BitfieldBox_PreviewTextInput" TextChanged="BitfieldBox_TextChanged" UndoPerformed="BitfieldBox_UndoPerformed" RedoPerformed="BitfieldBox_RedoPerformed"/>

    </Grid>
</local:BaseEditor>
