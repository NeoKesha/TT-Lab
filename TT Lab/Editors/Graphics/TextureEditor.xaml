<base:BaseEditor
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TT_Lab.Editors.Graphics"
             xmlns:base="clr-namespace:TT_Lab.Editors"
             xmlns:Controls="clr-namespace:TT_Lab.Controls" xmlns:System="clr-namespace:System;assembly=mscorlib" x:Class="TT_Lab.Editors.Graphics.TextureEditor"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="78*"/>
                <RowDefinition Height="97*"/>
                <RowDefinition Height="275*"/>
            </Grid.RowDefinitions>
            <Controls:LabeledDropList x:Name="TextureFunctionList" Margin="0" TextBoxName="Texture function">
                <Controls:LabeledDropList.Items>
                    <System:String>MODULATE</System:String>
                    <System:String>HIGHLIGHT</System:String>
                    <System:String>DECAL</System:String>
                </Controls:LabeledDropList.Items>
            </Controls:LabeledDropList>
            <Controls:LabeledDropList x:Name="PSMList" Margin="0" Grid.Row="1" TextBoxName="Pixel storage format">
                <Controls:LabeledDropList.Items>
                    <System:String>PSMT8</System:String>
                    <System:String>PSMTC32</System:String>
                </Controls:LabeledDropList.Items>
            </Controls:LabeledDropList>
        </Grid>
        <base:SceneEditor x:Name="TextureViewer" Grid.Column="1" Margin="0" Header="Texture viewer"/>

    </Grid>
</base:BaseEditor>
