<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:glWpfControl="clr-namespace:OpenTK.Wpf;assembly=GLWpfControl"
             x:Class="TT_Lab.Editors.SceneEditor"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <GroupBox x:Name="SceneHeader" Header="Scene viewer" AllowDrop="True">
            <glWpfControl:GLWpfControl x:Name="Glcontrol" RegisterToEventsDirectly="False" Initialized="Glcontrol_Init" Render="Glcontrol_Paint" Margin="0" AllowDrop="True"/>
        </GroupBox>
    </Grid>
</UserControl>
