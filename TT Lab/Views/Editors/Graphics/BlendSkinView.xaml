<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             x:Class="TT_Lab.Views.Editors.Graphics.BlendSkinView"
             xmlns:adonisExtensions="clr-namespace:AdonisUI.Extensions;assembly=AdonisUI"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <GroupBox>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="118*"/>
                <RowDefinition Height="113*"/>
                <RowDefinition Height="219*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="659*"/>
                <ColumnDefinition Width="141*"/>
            </Grid.ColumnDefinitions>
            <ContentControl x:Name="SceneRenderer" Margin="10,0,0,0" Grid.RowSpan="3"/>
            <ContentControl x:Name="MaterialViewer" Grid.Row="0" Grid.Column="1"/>
            <GroupBox adonisExtensions:LayerExtension.Layer="1" Grid.Column="1" Header="Morph weights" Grid.Row="2">
                <ScrollViewer>
                    <Grid ScrollViewer.VerticalScrollBarVisibility="Disabled" ScrollViewer.CanContentScroll="True" Height="500.1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="19*"/>
                            <RowDefinition Height="19*"/>
                            <RowDefinition Height="19*"/>
                            <RowDefinition Height="19*"/>
                            <RowDefinition Height="19*"/>
                            <RowDefinition Height="19*"/>
                            <RowDefinition Height="19*"/>
                            <RowDefinition Height="19*"/>
                            <RowDefinition Height="19*"/>
                            <RowDefinition Height="19*"/>
                            <RowDefinition Height="19*"/>
                            <RowDefinition Height="19*"/>
                            <RowDefinition Height="19*"/>
                            <RowDefinition Height="19*"/>
                            <RowDefinition Height="19*"/>
                        </Grid.RowDefinitions>
                        <Slider x:Name="Weight1" VerticalAlignment="Center" Width="120" Maximum="1" SmallChange="0.01" LargeChange="0.1"/>
                        <Slider x:Name="Weight2" VerticalAlignment="Center" Width="120" Maximum="1" SmallChange="0.01" LargeChange="0.1" Grid.Row="1"/>
                        <Slider x:Name="Weight3" VerticalAlignment="Center" Width="120" Maximum="1" SmallChange="0.01" LargeChange="0.1" Grid.Row="2"/>
                        <Slider x:Name="Weight4" VerticalAlignment="Center" Width="120" Maximum="1" SmallChange="0.01" LargeChange="0.1" Grid.Row="3"/>
                        <Slider x:Name="Weight5" VerticalAlignment="Center" Width="120" Maximum="1" SmallChange="0.01" LargeChange="0.1" Grid.Row="4"/>
                        <Slider x:Name="Weight6" VerticalAlignment="Center" Width="120" Maximum="1" SmallChange="0.01" LargeChange="0.1" Grid.Row="5"/>
                        <Slider x:Name="Weight7" VerticalAlignment="Center" Width="120" Maximum="1" SmallChange="0.01" LargeChange="0.1" Grid.Row="6"/>
                        <Slider x:Name="Weight8" VerticalAlignment="Center" Width="120" Maximum="1" SmallChange="0.01" LargeChange="0.1" Grid.Row="7"/>
                        <Slider x:Name="Weight9" VerticalAlignment="Center" Width="120" Maximum="1" SmallChange="0.01" LargeChange="0.1" Grid.Row="8"/>
                        <Slider x:Name="Weight10" VerticalAlignment="Center" Width="120" Maximum="1" SmallChange="0.01" LargeChange="0.1" Grid.Row="9"/>
                        <Slider x:Name="Weight11" VerticalAlignment="Center" Width="120" Maximum="1" SmallChange="0.01" LargeChange="0.1" Grid.Row="10"/>
                        <Slider x:Name="Weight12" VerticalAlignment="Center" Width="120" Maximum="1" SmallChange="0.01" LargeChange="0.1" Grid.Row="11"/>
                        <Slider x:Name="Weight13" VerticalAlignment="Center" Width="120" Maximum="1" SmallChange="0.01" LargeChange="0.1" Grid.Row="12"/>
                        <Slider x:Name="Weight14" VerticalAlignment="Center" Width="120" Maximum="1" SmallChange="0.01" LargeChange="0.1" Grid.Row="13"/>
                        <Slider x:Name="Weight15" VerticalAlignment="Center" Width="120" Maximum="1" SmallChange="0.01" LargeChange="0.1" Grid.Row="14"/>
                    </Grid>
                </ScrollViewer>
            </GroupBox>
            <Grid Grid.Column="1" Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="24*"/>
                    <RowDefinition Height="24*"/>
                    <RowDefinition Height="24*"/>
                </Grid.RowDefinitions>
                <Button x:Name="NextMatButton" Content="Next material" Grid.Column="1" VerticalAlignment="Center" Grid.Row="0" Height="25"/>
                <TextBlock Foreground="White" x:Name="MaterialName" TextWrapping="Wrap" Text="Material Name" Grid.Column="1" TextAlignment="Center" VerticalAlignment="Center" Grid.Row="1"/>
                <Button x:Name="PrevMatButton" Content="Previous material" Grid.Column="1" VerticalAlignment="Center" Height="25" Grid.Row="2"/>
            </Grid>

        </Grid>
    </GroupBox>
</UserControl>
