<UserControl
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:cal="clr-namespace:Caliburn.Micro;assembly=Caliburn.Micro.Platform"
        xmlns:local="clr-namespace:TT_Lab.Views.Editors.Instance"
        xmlns:viewModels="clr-namespace:TT_Lab.ViewModels.Editors.Instance"
        xmlns:util="clr-namespace:TT_Lab.Util"
        xmlns:Controls="clr-namespace:TT_Lab.Controls"
        d:DataContext="{Binding Source={d:DesignInstance viewModels:AiPositionViewModel}}"
        cal:Bind.AtDesignTime="True"
        x:Name="AiNavPositionEditorControl"
        x:Class="TT_Lab.Views.Editors.Instance.AiPositionView"
        mc:Ignorable="d" 
        d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Controls:LabeledDropList SelectedItem="{Binding LayoutID}" Items="{Binding Source={x:Static util:ViewModelUtil.Layers}, Mode=OneTime}" x:Name="InstanceLayoutList" HorizontalAlignment="Stretch" Margin="0,0,0,0" VerticalAlignment="Center" DropListName="Instance layout"/>
        <Controls:LabeledTextBox x:Name="Argument" HorizontalAlignment="Stretch" Margin="0,0,0,0" Grid.Row="1" VerticalAlignment="Center" TextBoxName="Argument"/>
        <GroupBox Grid.Column="1" Header="Position" Grid.RowSpan="2">
            <ContentControl x:Name="Position"/>
        </GroupBox>

    </Grid>
</UserControl>
